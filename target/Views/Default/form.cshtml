@using System.Data;
@using System.Data.SqlClient;
@{
    ViewBag.Title = "form";
    Layout = null;
}
@{ 
    string userid = "0";
    string txtEmployeeName = "";
    string txtEmail = "";
    string txtPhone = "";
    string txtCourse = "";
    string txtDob = "";
    string txtGender = "";
    string txtAddress = "";
    string txtCity = "";
    string txtState = "";
    string txtCountry = "";
    string txtMessage = "";

    DataTable data = ViewBag.edit as DataTable;

    if (ViewBag.id != null && data != null && data.Rows.Count > 0)
    {
        DataRow row = data.Rows[0];

        userid = row["userid"].ToString();
        txtEmployeeName = row["employeename"].ToString();
        txtEmail = row["email"].ToString();
        txtPhone = row["phone"].ToString();
        txtCourse = row["course"].ToString();
        txtGender = row["gender"].ToString();
        txtAddress = row["address"].ToString();
        txtCity = row["city"].ToString();
        txtState = row["state"].ToString();
        txtCountry = row["country"].ToString();
        txtDob = row["dob"].ToString();
        txtMessage = row["message"].ToString();
    }
}


<h2>Regestration Form</h2>
<html>
<head>
    <title>Regestration Form</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            padding-top: 30px;
            color: #333;
        }

        form#main {
            max-width: 727px;
            margin: 40px auto;
            background: #fff;
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
            margin-top: 20px;
            font-weight: 600;
            color: #444;
        }

        input[type="text"],
        input[type="email"],
        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            box-sizing: border-box;
        }

            input[type="text"]:focus,
            input[type="email"]:focus,
            select:focus {
                border-color: #007bff;
                outline: none;
            }

        input[type="submit"] {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 14px 20px;
            margin-top: 30px;
            width: 100%;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <form action="#" method="post" id="main">
        <lable>Employee Name</lable>
        <input type="text" id="name" value="@txtEmployeeName" placeholder="" />
        <input type="hidden" id="userid" value="@userid" placeholder="" />

        <label>Email</label>
        <input type="email" id="email" value="@txtEmail" placeholder="" />

        <label>Phone</label>
        <input type="text" id="phone" value="@txtPhone" placeholder="" />

        <label>Course</label>
        <select id="course" value="@txtCourse">
            <option value="Btech">Btech</option>
            <option value="Bsc">Bsc</option>
            <option value="MCA">MCA</option>
            <option value="MBA">MBA</option>
            <option value="Mtech">Mtech</option>
        </select>

        <label>Dob</label>
        <input type="date" id="dob" value="@txtDob" placeholder="" required />

        <label for="gender">Gender</label>
        <div class="gender-group" id="gender" value="@txtGender">
            <label><input type="radio" name="gender" value="male" @(txtGender == "male" ? "checked" : "")> Male</label>
            <label><input type="radio" name="gender" value="female" @(txtGender == "female" ? "checked" : "")> Female</label>
        </div>

        <label>Address</label>
        <input type="text" id="address" value="@txtAddress" placeholder="" />

        <lable>City</lable>
        <select id="city" value="@txtCity">
            <option value="Mumbai">Mumbai</option>
            <option value="Chennai">Chennai</option>
            <option value="Delhi">Delhi</option>
            <option value="Pune">Pune</option>
            <option value="Hyderabad">Hyderabad</option>
        </select>

        <label>State</label>
        <select id="state" value="@txtState">
            <option value="Maharashtra">Maharashtra</option>
            <option value="Mp">Mp</option>
            <option value="Up">Up</option>
            <option value="Ch">Ch</option>
            <option value="Hy">Hy</option>
        </select>

        <lable>Country</lable>
        <select id="country" value="@txtCountry">
            <option value="India">India</option>
            <option value="UK">UK</option>
            <option value="Russia">Russia</option>
            <option value="Asia">Asia</option>
            <option value="Europe">Europe</option>
        </select>

        <label>Message</label>
        <input type="text" id="message" value="@txtMessage" placeholder="" />

        <button id="submit">Submit</button>

    </form>
</body>
</html>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/JavaScript.js"></script>