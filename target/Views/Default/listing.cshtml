
@{
    Layout = null;
    ViewBag.Title = "listing";
    var data = ViewBag.listingdata as System.Data.DataTable;
    int i = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Listing</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 95%;
            margin: auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background-color: #007BFF;
            color: white;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9f5ff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Employee List</h1>
        <table>
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Course</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Country</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row (you can dynamically insert rows using JS or backend logic) -->
                @foreach (System.Data.DataRow row in data.Rows)
                {
                    <tr>
                        <td>@i</td>
                        @*<td>@row["userid"]</td>*@
                        <td>@row["EmployeeName"]</td>
                        <td>@row["Email"]</td>
                        <td>@row["Phone"]</td>
                        <td>@row["Course"]</td>
                        <td>@row["DOB"]</td>
                        <td>@row["Gender"]</td>
                        <td>@row["Address"]</td>
                        <td>@row["City"]</td>
                        <td>@row["State"]</td>
                        <td>@row["Country"]</td>
                        <td>@row["Message"]</td>

                        <td>
                            <a href="/Default/form?userid=@row["userid"]" class="btn btn-warning edit-button">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button class="delete-button" data-id="@row["userid"]">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/JavaScript.js"></script>
<script>
    $(document).ready(function () {
        $('.delete-button').click(function () {
            const userid = $(this).data('id'); // get USERID from button

            if (confirm('Are you sure you want to delete this record?')) {
                $.ajax({
                    url: '/Default/Delete', // ✅ Corrected controller
                    type: 'POST',
                    data: { USERID: userid }, // ✅ Send correct data
                    success: function (response) {
                        if (response.success) {
                            alert('Record deleted successfully.');
                            location.reload(); // Refresh the table
                        } else {
                            alert('Delete failed: ' + (response.message || 'Unknown error'));
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error deleting record: ' + error);
                    }
                });
            }
        });
    });
</script>

