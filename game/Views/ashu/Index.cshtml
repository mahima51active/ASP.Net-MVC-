@using System.Data;
@using System.Data.SqlClient;
@{
    ViewBag.Title = "Index";
    Layout = null;
}
@{ 
    string userid = "0";
    string txtname = "";
    string txtaddress = "";
    string txtcity = "";
    string txtstate = "";
    string txtemail = "";
    string txtgender = "";
    string txtmessage = "";

    DataTable data = ViewBag.edit as DataTable;

    if (ViewBag.id != null && data != null && data.Rows.Count > 0)
    {
        DataRow row = data.Rows[0];

        userid = row["userid"].ToString();
        txtname = row["name"].ToString();
        txtemail = row["email"].ToString();
        txtaddress = row["address"].ToString();
        txtcity = row["city"].ToString();
        txtstate = row["state"].ToString();
        txtgender = row["gender"].ToString();
        txtmessage = row["message"].ToString();
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Form</title>
    <style>
        * {
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background: #fff;
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            margin-top: 15px;
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        textarea,
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 5px;
        }

        input[type="radio"] {
            margin-right: 10px;
        }

        .gender-group {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 5px;
        }

        textarea {
            resize: vertical;
        }

        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 12px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 20px;
            font-size: 16px;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Contact Form</h2>
        <form id="longForm">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="@txtname" required>
            <input type="hidden" id="userid" value="@userid">

            <label for="name">Address</label>
            <input type="text" id="address" name="address" value="@txtaddress" required>

            <label for="name">City</label>
            <input type="text" id="city" name="city" value="@txtcity" required>

            <label for="name">State</label>
            <input type="text" id="state" name="state" value="@txtstate" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="@txtemail" required>

            @*<label for="password">Password</label>
        <input type="password" id="password" name="password" required>*@
            <div class="gender-group" id="gender">
                <label><input type="radio" name="gender" value="male" @(txtgender == "male" ? "checked" : "")> Male</label>
                <label><input type="radio" name="gender" value="female" @(txtgender == "female" ? "checked" : "")> Female</label>
            </div>
            <label for="message">Message</label>
            <textarea id="message" name="message" value="@txtmessage" rows="4">@txtmessage</textarea>
            @*<label>Gender</label>
            <div class="gender-group" id="gender" value="@txtgender">
                <label><input type="radio" name="gender" value="male"> Male</label>
                <label><input type="radio" name="gender" value="female"> Female</label>
            </div>

            <label for="message">Message</label>
            <textarea id="message" name="message" value="@txtmessage" rows="4"></textarea>*@

            <button type="submit" id="submit">Submit</button>
        </form>
    </div>

</body>
</html>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>

 
