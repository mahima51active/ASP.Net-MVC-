<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - DGL Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        /* Basic Reset and Font */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f8f8f8;
        }

        .dashboard {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background: #ff3cac;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .search {
            padding: 10px;
            border: none;
            border-radius: 5px;
            margin-bottom: 30px;
            width: 100%;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            padding: 12px 0;
            cursor: pointer;
        }

            .sidebar li.active,
            .sidebar li:hover {
                font-weight: bold;
                background: rgba(255, 255, 255, 0.2);
                padding-left: 10px;
                border-radius: 4px;
            }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
        }

        .settings {
            margin-top: auto;
            padding-top: 20px;
        }

        /* Main Content */
        .main {
            flex: 1;
            padding: 20px;
            background-color: #f8f8f8;
        }

        footer {
            text-align: center;
            padding: 15px;
            margin-top: 20px;
            color: #777;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">DGL</div>
            <input type="text" class="search" placeholder="Search..." />
            <nav>
                <ul>
                    <li class="active">🏠 Home</li>
                    <li>🗂 Tasks</li>
                    <li>👥 Team</li>
                    <li>📄 Documents</li>
                    <li>📦 Projects</li>
                    <li>📅 Calendar</li>
                    <li>
                        <a href="@Url.Action("ProductCategory", "Product")">🛒 Product Category</a>
                    </li>
                    <li>
                         <a href="@Url.Action("Addproduct", "Product")">🛒 Add Product</a>
                    </li>
                </ul>
            </nav>
            <nav>
                <ul>
                    <li class="settings">⚙ Settings</li>
                    <li class="settings">
                        <a href="@Url.Action("Logout", "login")">Log Out</a>
                    </li>

                </ul>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <div class="main">
            @RenderBody()
            <footer>
                <p>&copy; @DateTime.Now.Year - DGL Dashboard</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
