@using System;
@using System.Data;
@{
    var i = 1;
    var data = ViewBag.listing;
}

@*<h2>listing</h2>*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Listing Page</title>
    @*<link rel="stylesheet" href="style.css">*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 100%;
            margin: auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .table-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1200px;
        }

        thead th {
            background-color: #da71b3;
            color: white;
            padding: 12px;
            text-align: center;
            position: sticky;
            top: 0;
        }

        tbody td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="one" style="display:flex">
            <h1>Student Listing</h1>
            <p><a style="align-content:end" class="btn btn-outline-dark" href="@Url.Action("report", "form")">New registration &raquo;</a></p>
        </div>


        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Date of birth</th>
                        @*<th>Gender</th>*@
                        @*<th>Adhar</th>*@
                        <th>Phone</th>
                        <th>Email</th>
                        @*<th>Address</th>*@
                        <th>City</th>
                        <th>State</th>
                        @*<th>ZIP</th>
                            <th>SSC</th>
                            <th>HSC</th>
                            <th>UG</th>
                            <th>PG</th>*@
                        <th>Course</th>
                        @*<th>Session</th>*@
                        @*<th>Hobbies</th>*@
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow row in data.Rows)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@row["LAST_NAME"]</td>
                            <td>@row["FIRST_NAME"]</td>
                            <td>@row["DATE_BIRTH"]</td>
                            <td>@row["PHONE_NUM"]</td>
                            <td>@row["EMAIL"]</td>
                            <td>@row["CITY"]</td>
                            <td>@row["STATE"]</td>
                            @*<td>@row["date"]</td>*@
                            <td>
                                <a href="/Form/report?id=@row["STUDENT_ID"]" class="btn btn-warning edit-button">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- Delete Button -->
                                <button class="delete-button" data-id="@row["STUDENT_ID"]">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                        i++;
                    }

                    <!-- Add more student rows here -->
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.delete-button').click(function () {
            debugger;
            const id = $(this).data('id');

            if (confirm('Are you sure you want to delete this record?')) {
                $.ajax({
                    url: '/Form/Delete', // Change to match your route
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        alert('Record deleted successfully.');
                        location.reload(); // Refresh the page or remove row manually
                    },
                    error: function (xhr, status, error) {
                        alert('Error deleting record: ' + error);
                    }
                });
            }
        });
    });
</script>

