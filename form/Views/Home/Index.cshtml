@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Professional Home Page</title>
    <link rel="stylesheet" href="style.css" />
    <link href="~/styling/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container nav-container">
            <h1 class="logo">MyCompany</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Services</a></li>
                    <li><a href="#">Features</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
                <a href="@Url.Action("logout", "login")" class="btn btn-danger">Logout</a>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h2>Your Success Starts Here</h2>
            <p>We help businesses grow with innovative solutions and expert guidance.</p>
            <a href="#" class="btn">Get Started</a>
        </div>
    </section>

    <!-- About Section -->
    <section class="about section">
        <div class="container">
            <h2>About Us</h2>
            <p>
                We are a team of passionate professionals committed to helping you reach your business goals.
                With years of experience and a customer-first approach, we deliver top-notch services tailored to your needs.
            </p>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services section">
        <div class="container">
            <h2>Our Services</h2>
            <div class="cards">
                <div class="card">
                    <h3>Web Development</h3>
                    <p>Modern and responsive websites that convert visitors into customers.</p>
                </div>
                <div class="card">
                    <h3>Digital Marketing</h3>
                    <p>Grow your online presence with our SEO, PPC, and social media services.</p>
                </div>
                <div class="card">
                    <h3>Brand Strategy</h3>
                    <p>Build a strong brand identity that sets you apart from the competition.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features section">
        <div class="container">
            <h2>Why Choose Us</h2>
            <ul class="feature-list">
                <li>✔ Experienced & Skilled Team</li>
                <li>✔ 24/7 Customer Support</li>
                <li>✔ Customized Solutions</li>
                <li>✔ Affordable Pricing</li>
                <li>✔ Proven Results</li>
            </ul>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials section">
        <div class="container">
            <h2>What Our Clients Say</h2>
            <div class="testimonial">
                <p>“They transformed our online presence. The team is professional and highly skilled.”</p>
                <h4>— Sarah, CEO of TechNova</h4>
            </div>
            <div class="testimonial">
                <p>“Outstanding service and support. We saw a 300% increase in leads.”</p>
                <h4>— Raj, Founder of MarketGuru</h4>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact section">
        <div class="container">
            <h2>Contact Us</h2>
            <form class="contact-form">
                <input type="text" placeholder="Your Name" required />
                <input type="email" placeholder="Your Email" required />
                <textarea rows="5" placeholder="Your Message"></textarea>
                <button type="submit" class="btn">Send Message</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 MyCompany. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

