
@{
    ViewBag.Title = "login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login with Mobile</title>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            background-image: url('../../img/imglo.jpg');
            background-size:cover;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-top:185px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        input[type="tel"] {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>

    <div class="login-container">
        <h2>Login with Mobile</h2>
        <form action="otp.html" method="GET" onsubmit="return validateMobile()">
            <label for="mobile">Enter mobile number</label>
            <input type="tel" id="mobile" name="mobile" placeholder="Enter 10-digit number" maxlength="10" required />
            <button type="submit">Send OTP</button>
        </form>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script>
    function validateMobile() {
        const mobile = document.getElementById('mobile').value;
        const mobileRegex = /^[6-9]\d{9}$/;
        if (!mobileRegex.test(mobile)) {
            alert("Please enter a valid 10-digit mobile number.");
            return false;
        }
        return true;
    }
</script>


