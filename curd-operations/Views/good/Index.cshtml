         //if (pin === '') { alert("Please enter your pin correctly!"); return; }
         //if (quali === '') { alert("Please enter your quali correctly!"); return; }
         //if (university === '') { alert("Please enter your university correctly!"); return; }
         //if (year === '') { alert("Please enter your year correctly!"); return; }

            const formData = {
            userid: userid,
            fullname: fullname,
            Email: email,
            Phone: phone,
            address: address,
            city: city,
            State: state,
