<div class="form-container">
    <form method="post" id="frmRegistration">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" id="fullname" value="@fullname" name="fullname" />
            <input type="hidden" id="userid" name="userid" value="@userid" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" id="email" value="@email" name="email" required />
        </div>

        <div class="form-group">
            <label>Phone</label>
            <input type="text" id="phone" value="@phone" name="phone" maxlength="10" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" id="password" value="@password" name="password" required />
        </div>

        <div class="form-group">
            <label>Gender</label>
            <div class="gender-options" id="gender">
                <label><input type="radio" name="gender" @(gender.ToLower() == "male" ? "checked" : "") /><label for="male">Male</label></label>
                <label><input type="radio" name="gender" @(gender.ToLower() == "female" ? "checked" : "") /><label for="female">female</label></label>
                <label><input type="radio" name="gender" @(gender.ToLower() == "other" ? "checked" : "") /><label for="other">other</label></label>

            </div>
        </div>

