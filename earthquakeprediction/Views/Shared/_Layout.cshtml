    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Earthquake Monitor</title>

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Leaflet CSS -->
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
        <!-- Font Awesome for icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <!-- Custom CSS -->
        <link href="~/Content/Site.css" rel="stylesheet" />
        <style>
            /* Navbar Custom Styling */
.navbar-brand {
    font-size: 1.5rem;
    font-weight: 700;
}

            nav.navbar.navbar-expand-lg.navbar-dark.fixed-top {
                background-color: #80deb6;
            }

.navbar-dark .navbar-nav .nav-link {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
}

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #ffffff;
                background-color:coral;
                border-radius: 5px;
            }

            .navbar-dark .navbar-nav .nav-link.active {
                color: #ffffff;
                background-color: coral;
                border-radius: 5px;
                font-weight: 600;
            }

            body {
                background-image: url('https://cdn.pixabay.com/photo/2018/03/11/20/52/earthquake-3214723_1280.jpg');
            }

/* Status indicator animation */
#status-indicator {
    animation: pulse 2s infinite;
}

/* Dropdown styling */
.dropdown-menu {
    border: none;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    border-radius: 8px;
}

.dropdown-item {
    padding: 0.75rem 1.25rem;
    transition: background-color 0.2s ease;
}

.dropdown-item:hover {
    background-color: #f8f9fa;
}


/* Body padding for fixed navbar */
body {
    padding-top: 0; /* Handled in main tag */
}

/* Main content styling */
main {
    min-height: calc(100vh - 80px);
}

            a.btn.btn-primary {
                background-color: lightseagreen;
                border: none;
            }

            main.container-fluid {
                background-color: lavenderblush;
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            tbody, td, tfoot, th, thead, tr {
                border: 3px solid #000; /* Add border to all table cells */
                padding: 8px;
                text-align: left;
            }

            img, svg {
                vertical-align: middle;
                height: 71px;
                width: 71px;
            }
        </style>
    </head>
    <body>
        <!-- Navbar -->
        @*<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">*@
        <nav class="navbar navbar-expand-lg navbar-dark  fixed-top">
            <div class="container">
                <img src="~/images/images-Photoroombg.png" alt="Logo" class="logo">
                <!-- Brand -->
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                    @*<i class="fas fa-globe-americas me-2"></i>*@
                    EarthquakeMonitor
                </a>

                <!-- Mobile toggle button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"
                               href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-1"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Recent" ? "active" : "")"
                               href="@Url.Action("Recent", "Earthquake")">
                                <i class="fas fa-clock me-1"></i>
                                Recent Earthquakes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Graph" ? "active" : "")"
                               href="@Url.Action("Graph", "Earthquake")">
                                <i class="fas fa-chart-line me-1"></i>
                                Analytics
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-filter me-1"></i>
                                Filters
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="filterByMagnitude('high')">
                                        <i class="fas fa-exclamation-triangle text-danger me-2"></i>High Magnitude (6.0+)
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="filterByMagnitude('moderate')">
                                        <i class="fas fa-exclamation-circle text-warning me-2"></i>Moderate (4.0-5.9)
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="filterByMagnitude('low')">
                                        <i class="fas fa-info-circle text-success me-2"></i>Low Magnitude (<4.0)
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="clearFilters()">
                                        <i class="fas fa-times me-2"></i>Clear Filters
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Right side items -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                                <i class="fas fa-satellite-dish me-1"></i>
                                <span id="status-indicator" class="badge bg-success">Live</span>
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")"
                               href="@Url.Action("About", "Home")">
                                <i class="fas fa-info-circle me-1"></i>
                                About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"
                               href="@Url.Action("Contact", "Home")">
                                <i class="fas fa-envelope me-1"></i>
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main content with padding for fixed navbar -->
        <main class="container-fluid" style="padding-top: 80px;">
            @RenderBody()
        </main>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
        <script src="~/Scripts/earthquake-app.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
