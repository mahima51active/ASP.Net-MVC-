@using System.Data;
@using System.Data.SqlClient;
@{
    ViewBag.Title = "form";
    Layout = null;
}
@{ 
    string userid = "0";
    string txtfullname = "";
    string txtemail = "";
    string txtphone = "";
    string txtgender = "";
    string txtcourse = "";
    string txtaddres = "";
    string txtcity = "";
    string txtstate = "";
    string txtcountry = "";
    string txtcomment = "";

    DataTable data = ViewBag.edit as DataTable;

    if (ViewBag.id != null && data != null && data.Rows.Count > 0)
    {
        DataRow row = data.Rows[0];

        userid = row["userid"].ToString();
        txtfullname = row["fullname"].ToString();
        txtemail = row["email"].ToString();
        txtphone = row["phone"].ToString();
        txtgender = row["gender"].ToString();
        txtcourse = row["course"].ToString();
        txtaddres = row["address"].ToString();
        txtcity = row["city"].ToString();
        txtstate = row["state"].ToString();
        txtcountry = row["country"].ToString();
        txtcomment = row["comment"].ToString();
    }
}

<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
        }

        form#main {
            width: 790px;
            margin: 40px auto;
            background: #fff;
            padding: 50px 40px;
            border-radius: 10px;
            box-shadow: initial;
            font-size:larger;
        }

        h2{
            text-align:center;
        }

        input[type="text"],
        input[type="email"],
        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            box-sizing: border-box;
        }

            input[type="text"]:focus,
            input[type="email"]:focus,
            select:focus {
                border-color: #007bff;
                outline: none;
            }

        input[type="submit"] {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 14px 20px;
            margin-top: 30px;
            width: 100%;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

            #submit{
                height:34px;
                width:50px;
            }
    </style>
    <title>Regestration form</title>
</head>

<body>
    <h2>Regestration form</h2>
    <form id="main">
        <lable>Fullname</lable>
        <input type="text" id="name" value="@txtfullname" placeholder="" />
        <input type="hidden" id="userid" value="@userid" placeholder="" />

        <label>Email</label>
        <input type="email" id="email" value="@txtemail" placeholder="" />

        <label>Phone</label>
        <input type="text" id="phone" value="@txtphone" placeholder="" />

        <label for="gender">Gender</label>
        <div class="gender-group" id="gender" value="@txtgender">
            <label><input type="radio" name="gender" value="male" @(txtgender == "male" ? "checked" : "")> Male</label>
            <label><input type="radio" name="gender" value="female" @(txtgender == "female" ? "checked" : "")> Female</label>
        </div>

        <label>Course</label>
        <select id="course" value="@txtcourse">
            <option value="Btech">Btech</option>
            <option value="Bsc">Bsc</option>
            <option value="MCA">MCA</option>
            <option value="MBA">MBA</option>
            <option value="Mtech">Mtech</option>
        </select>

        <label>Address</label>
        <input type="text" id="address" value="@txtaddres" placeholder="" />

        <label>City</label>
        <select id="city" value="@txtcity">
            <option value="CHENNAI">CHENNAI</option>
            <option value="HYDERABAD">HYDERABAD</option>
            <option value="PUNE">PUNE</option>
            <option value="BANGLORE">BANGLORE</option>
        </select>

        <label>State</label>
        <select id="state" value="@txtstate">
            <option value="UP">UP</option>
            <option value="GH">GH</option>
            <option value="RT">RT</option>
            <option value="ST">ST</option>
        </select>

        <label>Country</label>
        <select id="country" value="@txtcountry">
            <option value="ASIA">ASIA</option>
            <option value="RUSSIA">RUSSIA</option>
            <option value="CHINA">CHINA</option>
            <option value="EUROPE">EUROPE</option>
        </select>
        <lable>Comment</lable>
        <input type="text" id="comment" value="@txtcomment" placeholder="" />

        <button id="submit">submit</button>
    </form>
</body>
</html>
<script src="~/logic/JavaScript.js"></script>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>




